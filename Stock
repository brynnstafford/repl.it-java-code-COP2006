*****Main.java
class Main {
	public static void main(String[] args) {
		
		Stock google = new Stock("goog", "Google, Inc.", 802);
		// Use \n in print statement. Separating for less confusion rn
		System.out.println("TickerSymbol: " + google.getTickerSymbol());
		System.out.println("Company: " + google.getCompanyName());
		System.out.println("Current Price: " + google.getPrice() + " " + google.getPercentChange());  
		System.out.println("Market Cap: " + google.getMarketCap());
		
		//System.out.println("TickerSymbol: " + google.getTickerSymbol()\n + "Company: " + google.getCompanyName()\n + "Current Price: " + google.getPrice() + " " + percentChange\n + "Market Cap: " + marketCap);
		
	}
}



*****Stock.java
public class Stock {
  
  // variables/states (should be private)
  private String tickerSymbol;
  private String companyName;
  private int price;
  private double percentChange;
  private int totalShares;
  private long marketCap;
  
  
  // constructor (default is public)
  
  public Stock(String atickerSymbol, String acompanyName, int aprice) {
    
    this.tickerSymbol = atickerSymbol.toUpperCase(); //(and convert the string to uppercase)
    this.companyName = acompanyName;
    this.price = aprice;
    this.totalShares = 0;
    
    this.percentChange = 0.0; //should default to zero.
    this.marketCap = totalShares * price; //is calculated by multiplying totalShares by price
  }
  
  
  // methods (default is protected)
  // setters(change) and getters
  
  // Set name of ticker symbol
	protected void changeTickerSymbol(String new_tickerSymbol) {
	  this.tickerSymbol = new_tickerSymbol;
	}
	// Get name of ticker symbol
	protected String getTickerSymbol() {
	  return tickerSymbol;
	}
	
	
	// Set name of company
	protected void changeCompanyName(String new_companyName) {
	  this.companyName = new_companyName;
	}
	// Get name of company
	protected String getCompanyName() {
	  return companyName;
	}
	
	
	
	
	// This method will change the price by change (change can be positive or negative). It should also recalculate percentChange and marketCap.percentChange represents the percentage changed
  
  //protected void adjustPrice(int change);
  
  
  // AHHH LEFT OFF HERE EVERYTHING BELOW NEEDS TO BE REDONE
  // setter (void type, sets the new price value)
  protected void adjustPrice(int change) {
	  // checks new price and then assigns the value
	  if (change > 0.1 && change <= 4.0) {
	    this.price = change;
	  }	else {
	    this.price = 1.0;
	  }
	}
	protected double getPrice() {
	  // getter: type is the same as return type and returns current value
	  return price;
	}

	
	
	// Set price
	protected void adjustPrice(int change) {
	  this.price = change;
	  this.percentChange = change;
	  this.marketCap = change;
	}
	// Get price
	protected int getPrice() {
	  return price;
	}
	// Get percent change
	protected int getPercentChange() {
	  return percentChange;
	}
	// Get market Cap
	protected 
	

  
  
  
  
  
  
  
  
  
  
  /* This method should return a SINGLE String (using \n) that represents something like the following:
    Ticker Symbol: 
    GOOGCompany: Google, Inc.
    Current Price: $802 (+7.2%)
    Market Cap: $538000000000
  */
  
  //protected String toString();
  
  
}

